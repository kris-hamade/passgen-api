PORT=8080
QRNG_ENABLED=true
QRNG_API_KEY=ROTATED_KEY_GOES_HERE
QRNG_URL=https://api.qrng.outshift.com/api/v1/random_numbers
QRNG_REFRESH_MS=15000          # fetch every 15s (tune as needed)
QRNG_BITS_PER_BLOCK=10
QRNG_BLOCKS_PER_REFRESH=1024   # amortize: e.g., 1024 blocks -> 1280 bytes
ENABLE_HWRNG=false             # set true on Linux if /dev/hwrng exists